---
import { PageMeta } from "@/components";
import { Base as Layout } from "@/layouts";
---

<Layout>
  <PageMeta title="404 | Livin' on the Edge" description="You appear to be lost..." slot="meta" />
  <section class="mb-8" slot="main">
    <div class="mb-4">
      <h1 class="font-extrabold text-5xl md:text-6xl tracking-tight pt-4 pb-2 overflow-hidden">
        <span class="bg-gradient-to-br from-[#fb923c] via-[#f97316] to-[#ea580c] dark:from-primary-main dark:via-primary-main dark:to-primary-main bg-clip-text text-transparent">
          404
        </span>
      </h1>
      <p class="text-xl">You appear to have fallen off the edge. <a href="/">Need a lift?</a></p>
    </div>
  </section>
</Layout>
