---
import SVGIcon from "./SVGIcon.astro";
import { siDiscord, siGithub } from "simple-icons";
import { HeaderLink, DarkModeToggle } from "@/components";
---

<header>
  <a class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]" href="#main">
    Skip to content
  </a>
  <nav>
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <li><HeaderLink href="/">Home</HeaderLink></li>
        <li><HeaderLink href="/blog/">Blog</HeaderLink></li>
        <li><HeaderLink href="/projects/">Projects</HeaderLink></li>
      </ul>
    </section>
  </nav>
  <div class="max-[375px]:hidden justify-self-end py-2 flex items-center content-center text-text-bold">
    <a class="unset text-xl ml-4 hover:text-text-link" href="https://github.com/helloimalastair">
      <SVGIcon title="HelloImAlastair on Github" path={siGithub.path}>
      <span class="sr-only">HelloImAlastair on GitHub</span>
    </a>
    <a class="unset text-xl ml-4 hover:text-text-link" href="https://discord.com/users/459755459117711362">
      <SVGIcon title="HelloImAlastair on Discord" path={siDiscord.path}>
      <span class="sr-only">HelloImAlastair on Discord</span>
    </a>
  </div>
  <DarkModeToggle />
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
</style>
